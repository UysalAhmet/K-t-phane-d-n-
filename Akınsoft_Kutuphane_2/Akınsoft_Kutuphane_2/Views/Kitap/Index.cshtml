            if (response.Durum == true) {
                Swal.fire({
                    title: 'Başarılı!',
                    text: response.Mesaj,
                    icon: 'success',
                    confirmButtonText: 'Tamam'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $("#modal-lg").modal("hide");
                        $.ajax({
                            url: "/Kitap/KitapTablo",
                            type: "get",
                            success: function (result) {
                                $("#kitaptablo").html(result);
